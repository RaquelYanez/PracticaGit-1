package FigBien;

public class Triangulo {
	// definir atrbutos
	private double base;
	private double lado;

	public Triangulo(double base, double lado) { // float espera los aprametros float siguientes
		this.base = base;
		this.lado = lado;
	}
	// Lo anterio todo es el constructor

	// Creamos nuevo metodo público que nos retornará un double sin parámetros
	public double obtenerPerimetro() {
		double perimetro = 2*lado+base;
		return perimetro;

		//Creamos otro metodo que sea para obtener área
		public double obtenerArea () {
			//Hacemos otra variable de tipo double para calcular el area 
			double area = (base*Math.sqrt((lado*lado)-((base*base)/4)))/2;
			return area;
		}
		//Creamos metodo string para mostrar datos
		
		public String mostrarDatos( ) {
			return = "Base: "+base "Lados: " + lado "Perimetro: "+ obtenerPerimetro()+"Area: "+obtenerArea()+;
			
		
	}
}